{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\[watch\\] build (failed|started)",
          "kind": "location",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\[watch\\] build started",
          "endsPattern": "\\[watch\\] build (finished|failed)"
        }
      },
      "isBackground": true
    }
  ]
}
