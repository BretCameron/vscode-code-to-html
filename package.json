{
  "name": "vscode-code-to-html",
  "displayName": "Code to HTML",
  "description": "Copy syntax-highlighted code as HTML for blog posts, forum submissions and more!",
  "version": "0.0.1",
  "author": {
    "name": "Bret Cameron",
    "url": "https://bretcameron.com/"
  },
  "publisher": "bret",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BretCameron/vscode-code-to-html"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeToHtml.copyAsHtml",
        "title": "Copy as HTML",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.selectTheme",
        "title": "Select Theme",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.toggleLineNumbers",
        "title": "Toggle Line Numbers",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.selectFilePath",
        "title": "Select File Path Display",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.toggleBorder",
        "title": "Toggle Border",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.selectLanguage",
        "title": "Select Language Override",
        "category": "Code to HTML"
      },
      {
        "command": "codeToHtml.previewAsHtml",
        "title": "Preview as HTML",
        "category": "Code to HTML"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codeToHtml.copyAsHtml",
          "group": "5_cutcopypaste",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "codeToHtml.copyAsHtml",
          "group": "9_cutcopypaste"
        },
        {
          "command": "codeToHtml.previewAsHtml",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codeToHtml.copyAsHtml",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Code to HTML",
      "properties": {
        "codeToHtml.theme": {
          "type": "string",
          "default": "github-dark",
          "enum": [
            "andromeeda",
            "aurora-x",
            "ayu-dark",
            "catppuccin-frappe",
            "catppuccin-latte",
            "catppuccin-macchiato",
            "catppuccin-mocha",
            "dark-plus",
            "dracula",
            "dracula-soft",
            "everforest-dark",
            "everforest-light",
            "github-dark",
            "github-dark-default",
            "github-dark-dimmed",
            "github-dark-high-contrast",
            "github-light",
            "github-light-default",
            "github-light-high-contrast",
            "houston",
            "kanagawa-dragon",
            "kanagawa-lotus",
            "kanagawa-wave",
            "laserwave",
            "light-plus",
            "material-theme",
            "material-theme-darker",
            "material-theme-lighter",
            "material-theme-ocean",
            "material-theme-palenight",
            "min-dark",
            "min-light",
            "monokai",
            "night-owl",
            "nord",
            "one-dark-pro",
            "one-light",
            "plastic",
            "poimandres",
            "red",
            "rose-pine",
            "rose-pine-dawn",
            "rose-pine-moon",
            "slack-dark",
            "slack-ochin",
            "snazzy-light",
            "solarized-dark",
            "solarized-light",
            "synthwave-84",
            "tokyo-night",
            "vesper",
            "vitesse-black",
            "vitesse-dark",
            "vitesse-light"
          ],
          "description": "Syntax highlighting theme"
        },
        "codeToHtml.lineNumbers": {
          "type": "boolean",
          "default": false,
          "description": "Include line numbers"
        },
        "codeToHtml.border": {
          "type": "boolean",
          "default": false,
          "description": "Add a light grey border around code blocks"
        },
        "codeToHtml.languageOverride": {
          "type": "string",
          "default": "auto",
          "description": "Override auto-detected language (use a Shiki language ID, or \"auto\")"
        },
        "codeToHtml.showFilePath": {
          "type": "string",
          "default": "filename",
          "enum": [
            "filename",
            "relative",
            "absolute",
            "none"
          ],
          "description": "File path display in headers"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "shiki": "^1.24.0"
  }
}